\mode<presentation>

% Theme colors

\definecolor{primary}{HTML}{6CC24A}
\definecolor{secondary}{HTML}{6E7CA0}
\definecolor{accent}{HTML}{003A70}
\definecolor{alert}{HTML}{DA291C}

% Settings
\setbeamercolor*{title page header}{fg=accent}
\setbeamercolor*{author}{fg=accent}
\setbeamercolor*{date}{fg=accent}
\setbeamercolor*{item}{fg=accent}
\setbeamercolor{alerted text}{fg=alert}
\setbeamercolor{frametitle}{fg=accent}
\setbeamercolor{section in head/foot}{fg=white, bg=primary}
\setbeamercolor{subsection in head/foot}{fg=white, bg=primary}
% Blocks
\setbeamercolor{block body}{bg=primary!10}
\setbeamercolor{block title}{fg=accent, bg=primary!40}
\setbeamercolor{block body example}{bg=secondary!10}
\setbeamercolor{block title example}{fg=accent!80, bg=secondary!20}
\setbeamercolor{block body alerted}{bg=alerted text.fg!10}
\setbeamercolor{block title alerted}{bg=alerted text.fg!20}

\mode<all>
